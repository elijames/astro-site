---
import HomepageHero from '../organisms/HomepageHero.astro';
import Layout from '../../layouts/Layout.astro';

interface Props {
    title: string;
    description: string;
    showHero?: boolean;
}

const { title, description, showHero = true } = Astro.props;
---
<Layout>
    <main class="min-h-screen bg-black text-white">
        {showHero && <HomepageHero />}
        <div class="container mx-auto px-4 py-8">
            <slot />
        </div>
    </main>
</Layout>